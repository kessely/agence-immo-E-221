{% extends 'admin/ad/base.html.twig' %}

{% block title %}Administration des réservations{% endblock %}

{% block body %}

<div class="container-fluid">
<h1 class="my-5">Administration des réservations</h1>
 <table class="table table-hover">
          <thead>
              <tr>
                  <th>Id</th>
                  <th>Date</th>
                  <th>Visiteur</th>
                  <th >Annonce</th>
                  <th >Durée</th>
                  <th >Montant</th>
                  <th >Action</th>
                  
              </tr>
          </thead>

          <tbody>
              {% for booking in pagination.data %}
                  
             
              <tr>
                  <td>{{booking.id}}</td>
                  <td>{{booking.createdAt|date("d/m/Y H:i")}}</td>
                  <td>
                      <img src="{{booking.ad.author.picture}}" alt="Avatar de  {{booking.ad.author.fullName}}" class="avatar avatar-micro mr-2">{{booking.ad.author.fullName}}
                  </td>
                  <td >
                      <span >{{booking.ad.title }}</span>
                      
                 </td>
                 <td></td>
                 <td>{{booking.amount}}</td>
                 
                  <td>
                      <a href="{{path('admin_booking_edit', {'id':booking.id})}}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                      <a href="{{path('admin_booking_delete', {'id':booking.id})}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>

                  </td>
              </tr>
             {% endfor %}
          </tbody>


    </table>

    {{pagination.display()}} 

</div>

{% endblock %}
